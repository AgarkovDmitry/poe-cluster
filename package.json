{
  "name": "ssr-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "prettier-check": "prettier --check \"*\"",
    "ts-check": "tsc --noEmit",
    "generate-cluster-data": "node scripts/generate-cluster-data",
    "postinstall": "yarn generate-cluster-data"
  },
  "dependencies": {
    "axios": "^0.22.0",
    "classnames": "2.3.1",
    "next": "10.2.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "use-debounce": "^6.0.1"
  },
  "devDependencies": {
    "@types/classnames": "2.3.1",
    "@types/jest": "26.0.23",
    "@types/node": "15.0.1",
    "@types/react": "17.0.4",
    "eslint-config-prettier": "8.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4",
    "typescript-plugin-css-modules": "^3.2.0"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --write"
    ]
  }
}
